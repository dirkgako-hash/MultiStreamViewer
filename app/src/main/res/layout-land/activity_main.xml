<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- GridLayout para os 4 players -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:focusable="false" />

    <!-- BARRA INFERIOR OTIMIZADA PARA TV -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#1a1a1a"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <!-- Botão BACK -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="#333333"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="←"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Botão MENU -->
        <Button
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="#1e3c72"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="☰"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Checkboxes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOX:"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:checked="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:checked="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:checked="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:checked="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Espaço flexível -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Indicador de box em foco -->
        <TextView
            android:id="@+id/tvFocusedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foco: 1"
            android:textColor="#FF9800"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:focusable="false" />
    </LinearLayout>

    <!-- Overlay para bloquear boxes quando sidebar está aberto -->
    <FrameLayout
        android:id="@+id/sidebarOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

    <!-- Sidebar Menu -->
    <FrameLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottomControls"
        android:background="#1a1a1a"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Cabeçalho -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CONFIGURAÇÕES TV"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnCloseMenu"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#ff4444"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="✕"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- GUARDAR/CARREGAR -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR / CARREGAR"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/btnSaveState"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#4CAF50"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="GUARDAR ESTADO"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/btnLoadState"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#4CAF50"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="CARREGAR ESTADO"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnSaveFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#FF9800"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="GUARDAR FAVORITO"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/btnLoadFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#FF9800"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="CARREGAR FAVORITO"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <!-- CONFIGURAÇÕES -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONFIGURAÇÕES WEB"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <CheckBox
                    android:id="@+id/cbAllowScripts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="JavaScript"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <CheckBox
                    android:id="@+id/cbAllowForms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Formulários"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <CheckBox
                    android:id="@+id/cbAllowPopups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Popups"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <CheckBox
                    android:id="@+id/cbBlockRedirects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Bloquear Redirects"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <CheckBox
                    android:id="@+id/cbBlockAds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Bloquear Anúncios"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <!-- URLs -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="URLs (ENTER para carregar)"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <!-- URL 1 com botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <EditText
                        android:id="@+id/urlInput1"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="#333333"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 1"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="8dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                    <Button
                        android:id="@+id/btnLoadUrl1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#1e3c72"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="▶"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- URL 2 com botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <EditText
                        android:id="@+id/urlInput2"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="#333333"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 2"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="8dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                    <Button
                        android:id="@+id/btnLoadUrl2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#1e3c72"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="▶"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- URL 3 com botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <EditText
                        android:id="@+id/urlInput3"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="#333333"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 3"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="8dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                    <Button
                        android:id="@+id/btnLoadUrl3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#1e3c72"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="▶"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- URL 4 com botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/urlInput4"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="#333333"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 4"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="8dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                    <Button
                        android:id="@+id/btnLoadUrl4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#1e3c72"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="▶"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Botões de ação -->
                <Button
                    android:id="@+id/btnLoadAll"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#1e3c72"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="CARREGAR TODAS"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/btnReloadAll"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#1e3c72"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="RECARREGAR TODAS"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/btnClearAll"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#ff4444"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="LIMPAR TODAS"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>
