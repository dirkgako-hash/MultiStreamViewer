<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- GridLayout para as boxes -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomControls"
        android:background="#000000"
        android:focusable="false" />

    <!-- MENU INFERIOR COMPACTO COM BOTÃO RV -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:background="#1a1a1a"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <!-- Botão MENU -->
        <Button
            android:id="@+id/btnMenu"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:background="#1e3c72"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="☰"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <!-- CONTROLES BOX 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="4dp">
            
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:checked="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            
            <Button
                android:id="@+id/btnRefresh1"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:background="#333333"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="R"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
            
            <!-- NOVO BOTÃO RV PARA RECARREGAR VÍDEO -->
            <Button
                android:id="@+id/btnReloadVideo1"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="#333333"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="RV"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnZoomIn1"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="#333333"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Z+"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnZoomOut1"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="#333333"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Z-"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnPrevious1"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="#333333"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="◀"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
            
            <Button
                android:id="@+id/btnNext1"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="#333333"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="▶"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- CONTROLES BOX 2 -->
