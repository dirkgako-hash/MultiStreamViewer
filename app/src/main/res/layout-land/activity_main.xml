<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- GridLayout para as boxes -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomControls"
        android:background="@color/background_black"
        android:focusable="false" />

    <!-- BOTTOM BAR EXPANDIDO (CONTROLES DETALHADOS) -->
    <LinearLayout
        android:id="@+id/expandedBottomBar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/bottomControls"
        android:background="@color/background_dark"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <Button
            android:id="@+id/btnCloseMenu"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:background="@color/button_red"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="✕ FECHAR"
            android:textColor="@color/text_white"
            android:textSize="8sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <!-- URLs em linha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <EditText
                        android:id="@+id/urlInput1"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:background="@color/background_darker"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 1"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="3dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:singleLine="true"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/btnLoadUrl1"
                        android:layout_width="25dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="GO"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <EditText
                        android:id="@+id/urlInput2"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/background_darker"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 2"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="3dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:singleLine="true"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/btnLoadUrl2"
                        android:layout_width="25dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_purple"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="GO"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <EditText
                        android:id="@+id/urlInput3"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/background_darker"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 3"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="3dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:singleLine="true"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/btnLoadUrl3"
                        android:layout_width="25dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_orange"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="GO"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <EditText
                        android:id="@+id/urlInput4"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/background_darker"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 4"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="3dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:singleLine="true"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/btnLoadUrl4"
                        android:layout_width="25dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_purple"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="GO"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />
                </LinearLayout>

                <!-- Botões de ação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                    <Button
                        android:id="@+id/btnLoadAll"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="LOAD"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/btnReloadAll"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_purple"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="RELOAD"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/btnClearAll"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_red"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="CLEAR"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/btnSaveState"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_green"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="SAVE"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/btnLoadState"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_green"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="LOAD"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/btnSaveFavorites"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_orange"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="★SAVE"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/btnLoadFavorites"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_orange"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="★LOAD"
                        android:textColor="@color/text_white"
                        android:textSize="7sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- ══════════════════════════════════════════════════════════════
         BOTTOM BAR  –  with Mute button added per box
    ══════════════════════════════════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:background="@color/background_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <Button
            android:id="@+id/btnToggleBottomBar"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:background="@color/button_blue"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="◄"
            android:textColor="@color/text_white"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btnToggleOrientation"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:background="@color/button_green"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="⟷"
            android:textColor="@color/text_white"
            android:textSize="8sp" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="4dp">

                <!-- BOX 1 – AZUL -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="4dp">

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/text_blue"
                        android:textSize="8sp"
                        android:checked="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/checkBoxKeepActive1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="K"
                        android:textColor="@color/text_blue"
                        android:textSize="8sp"
                        android:checked="false"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginStart="2dp" />

                    <Button
                        android:id="@+id/btnRefresh1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_blue_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="R"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnZoomIn1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="Z+"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnZoomOut1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="Z-"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnPrevious1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_blue_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="◀"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnNext1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_blue_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="▶"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                </LinearLayout>

                <!-- BOX 2 – ROXO -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="4dp">

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/text_purple"
                        android:textSize="8sp"
                        android:checked="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/checkBoxKeepActive2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="K"
                        android:textColor="@color/text_purple"
                        android:textSize="8sp"
                        android:checked="false"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginStart="2dp" />

                    <Button
                        android:id="@+id/btnRefresh2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_purple_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="R"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnZoomIn2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_purple"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="Z+"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnZoomOut2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_purple"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="Z-"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnPrevious2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_purple_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="◀"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnNext2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_purple_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="▶"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                </LinearLayout>

                <!-- BOX 3 – AZUL -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="4dp">

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/text_blue"
                        android:textSize="8sp"
                        android:checked="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/checkBoxKeepActive3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="K"
                        android:textColor="@color/text_blue"
                        android:textSize="8sp"
                        android:checked="false"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginStart="2dp" />

                    <Button
                        android:id="@+id/btnRefresh3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_blue_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="R"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnZoomIn3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="Z+"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnZoomOut3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="Z-"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnPrevious3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_blue_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="◀"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnNext3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_blue_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="▶"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                </LinearLayout>

                <!-- BOX 4 – ROXO -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/text_purple"
                        android:textSize="8sp"
                        android:checked="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/checkBoxKeepActive4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="K"
                        android:textColor="@color/text_purple"
                        android:textSize="8sp"
                        android:checked="false"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginStart="2dp" />

                    <Button
                        android:id="@+id/btnRefresh4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/button_purple_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="R"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnZoomIn4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_purple"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="Z+"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnZoomOut4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_purple"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="Z-"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnPrevious4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_purple_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="◀"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnNext4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/button_purple_dark"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="▶"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                </LinearLayout>

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvFocusedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foco: 1"
                    android:textColor="@color/text_orange"
                    android:textSize="8sp"
                    android:layout_marginStart="4dp"
                    android:focusable="false" />
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnToggleSidebar"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:background="@color/button_red"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="►"
            android:textColor="@color/text_white"
            android:textSize="8sp" />
    </LinearLayout>

    <!-- ══════════════════════════════════════════════════════════════
         SIDEBAR
    ══════════════════════════════════════════════════════════════ -->
    <FrameLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottomControls"
        android:background="@color/background_dark"
        android:visibility="gone"
        android:elevation="100dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:onClick="closeSidebarFromOverlay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background_dark"
            android:padding="6dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONFIG"
                    android:textColor="@color/text_white"
                    android:textSize="8sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCloseSidebar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/button_red"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="✕"
                    android:textColor="@color/text_white"
                    android:textSize="8sp" />
            </LinearLayout>

            <!-- Save / Load state -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btnSaveStateSidebar"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@color/button_green"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="SALVAR"
                    android:textColor="@color/text_white"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btnLoadStateSidebar"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:background="@color/button_green"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="CARREGAR"
                    android:textColor="@color/text_white"
                    android:textSize="9sp" />
            </LinearLayout>

            <!-- Favorites -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnSaveFavoritesSidebar"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@color/button_orange"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="FAV SAVE"
                    android:textColor="@color/text_white"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btnLoadFavoritesSidebar"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:background="@color/button_orange"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="FAV LOAD"
                    android:textColor="@color/text_white"
                    android:textSize="9sp" />
            </LinearLayout>

            <!-- Web settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbAllowScripts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="JavaScript"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/cbAllowForms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Formulários"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/cbAllowPopups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Popups"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <CheckBox
                        android:id="@+id/cbBlockRedirects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Bloq.Redirect"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/cbBlockAds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Bloq. Ads"
                        android:textColor="@color/text_white"
                        android:textSize="8sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- URL inputs – sidebar (unique IDs) -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="3dp">
                <EditText android:id="@+id/urlInputSidebar1" android:layout_width="0dp"
                    android:layout_height="20dp" android:layout_weight="1"
                    android:background="@color/background_darker" android:focusable="true"
                    android:focusableInTouchMode="true" android:hint="Box 1"
                    android:imeOptions="actionDone" android:inputType="textUri" android:padding="6dp"
                    android:text="https://dzritv.com/sport/football/" android:textColor="@color/text_white"
                    android:textSize="8sp" android:singleLine="true" android:maxLines="1" />
                <Button android:id="@+id/btnLoadUrlSidebar1" android:layout_width="40dp"
                    android:layout_height="20dp" android:layout_marginStart="3dp"
                    android:background="@color/button_blue" android:focusable="true"
                    android:focusableInTouchMode="true" android:text="GO"
                    android:textColor="@color/text_white" android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="3dp">
                <EditText android:id="@+id/urlInputSidebar2" android:layout_width="0dp"
                    android:layout_height="20dp" android:layout_weight="1"
                    android:background="@color/background_darker" android:focusable="true"
                    android:focusableInTouchMode="true" android:hint="Box 2"
                    android:imeOptions="actionDone" android:inputType="textUri" android:padding="6dp"
                    android:text="https://dzritv.com/sport/football/" android:textColor="@color/text_white"
                    android:textSize="8sp" android:singleLine="true" android:maxLines="1" />
                <Button android:id="@+id/btnLoadUrlSidebar2" android:layout_width="40dp"
                    android:layout_height="20dp" android:layout_marginStart="3dp"
                    android:background="@color/button_purple" android:focusable="true"
                    android:focusableInTouchMode="true" android:text="GO"
                    android:textColor="@color/text_white" android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="3dp">
                <EditText android:id="@+id/urlInputSidebar3" android:layout_width="0dp"
                    android:layout_height="20dp" android:layout_weight="1"
                    android:background="@color/background_darker" android:focusable="true"
                    android:focusableInTouchMode="true" android:hint="Box 3"
                    android:imeOptions="actionDone" android:inputType="textUri" android:padding="6dp"
                    android:text="https://dzritv.com/sport/football/" android:textColor="@color/text_white"
                    android:textSize="8sp" android:singleLine="true" android:maxLines="1" />
                <Button android:id="@+id/btnLoadUrlSidebar3" android:layout_width="40dp"
                    android:layout_height="20dp" android:layout_marginStart="3dp"
                    android:background="@color/button_blue" android:focusable="true"
                    android:focusableInTouchMode="true" android:text="GO"
                    android:textColor="@color/text_white" android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="8dp">
                <EditText android:id="@+id/urlInputSidebar4" android:layout_width="0dp"
                    android:layout_height="20dp" android:layout_weight="1"
                    android:background="@color/background_darker" android:focusable="true"
                    android:focusableInTouchMode="true" android:hint="Box 4"
                    android:imeOptions="actionDone" android:inputType="textUri" android:padding="6dp"
                    android:text="https://dzritv.com/sport/football/" android:textColor="@color/text_white"
                    android:textSize="8sp" android:singleLine="true" android:maxLines="1" />
                <Button android:id="@+id/btnLoadUrlSidebar4" android:layout_width="40dp"
                    android:layout_height="20dp" android:layout_marginStart="3dp"
                    android:background="@color/button_purple" android:focusable="true"
                    android:focusableInTouchMode="true" android:text="GO"
                    android:textColor="@color/text_white" android:textSize="8sp" />
            </LinearLayout>

            <!-- Action buttons – sidebar -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="4dp">
                <Button android:id="@+id/btnLoadAllSidebar" android:layout_width="0dp"
                    android:layout_height="20dp" android:layout_weight="1"
                    android:background="@color/button_blue" android:focusable="true"
                    android:focusableInTouchMode="true" android:text="LOAD"
                    android:textColor="@color/text_white" android:textSize="8sp" />
                <Button android:id="@+id/btnReloadAllSidebar" android:layout_width="0dp"
                    android:layout_height="20dp" android:layout_weight="1"
                    android:layout_marginStart="3dp" android:background="@color/button_purple"
                    android:focusable="true" android:focusableInTouchMode="true" android:text="RELOAD"
                    android:textColor="@color/text_white" android:textSize="8sp" />
                <Button android:id="@+id/btnClearAllSidebar" android:layout_width="0dp"
                    android:layout_height="20dp" android:layout_weight="1"
                    android:layout_marginStart="3dp" android:background="@color/button_red"
                    android:focusable="true" android:focusableInTouchMode="true" android:text="CLEAR"
                    android:textColor="@color/text_white" android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
