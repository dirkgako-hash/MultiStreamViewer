<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Layout principal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <!-- GridLayout para os 4 players -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <!-- BARRA INFERIOR OTIMIZADA PARA TV -->
        <LinearLayout
            android:id="@+id/bottomControls"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#1a1a1a"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp">

            <!-- Botão BACK -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="#333333"
                android:text="←"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Botão MENU -->
            <Button
                android:id="@+id/btnMenu"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="#1e3c72"
                android:text="☰"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Botão CURSOR MODE -->
            <Button
                android:id="@+id/btnCursorMode"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="#555555"
                android:text="CURSOR"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <!-- Checkboxes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOX:"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:checked="true" />

            <!-- Espaço flexível -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Indicador de box em foco -->
            <TextView
                android:id="@+id/tvFocusedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foco: 1"
                android:textColor="#FF9800"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Overlay para sidebar -->
        <View
            android:id="@+id/sidebarOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:clickable="true"
            android:visibility="gone" />

        <!-- Sidebar Menu -->
        <FrameLayout
            android:id="@+id/sidebarContainer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/bottomControls"
            android:background="#1a1a1a"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Cabeçalho -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CONFIGURAÇÕES"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnCloseMenu"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="#ff4444"
                            android:text="✕"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- URLs -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="URLs"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <!-- URL 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <EditText
                            android:id="@+id/urlInput1"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:hint="Box 1"
                            android:imeOptions="actionDone"
                            android:inputType="textUri"
                            android:padding="8dp"
                            android:text="https://dzritv.com/sport/football/"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <Button
                            android:id="@+id/btnLoadUrl1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="#1e3c72"
                            android:text="▶"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- URL 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <EditText
                            android:id="@+id/urlInput2"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:hint="Box 2"
                            android:imeOptions="actionDone"
                            android:inputType="textUri"
                            android:padding="8dp"
                            android:text="https://dzritv.com/sport/football/"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <Button
                            android:id="@+id/btnLoadUrl2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="#1e3c72"
                            android:text="▶"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- URL 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <EditText
                            android:id="@+id/urlInput3"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:hint="Box 3"
                            android:imeOptions="actionDone"
                            android:inputType="textUri"
                            android:padding="8dp"
                            android:text="https://dzritv.com/sport/football/"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <Button
                            android:id="@+id/btnLoadUrl3"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="#1e3c72"
                            android:text="▶"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- URL 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <EditText
                            android:id="@+id/urlInput4"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:hint="Box 4"
                            android:imeOptions="actionDone"
                            android:inputType="textUri"
                            android:padding="8dp"
                            android:text="https://dzritv.com/sport/football/"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <Button
                            android:id="@+id/btnLoadUrl4"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="#1e3c72"
                            android:text="▶"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Botões de ação -->
                    <Button
                        android:id="@+id/btnLoadAll"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#4CAF50"
                        android:text="CARREGAR TODAS"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <Button
                        android:id="@+id/btnReloadAll"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#4CAF50"
                        android:text="RECARREGAR TODAS"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <Button
                        android:id="@+id/btnClearAll"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#ff4444"
                        android:text="LIMPAR TODAS"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </RelativeLayout>

    <!-- Cursor Virtual -->
    <ImageView
        android:id="@+id/virtualCursor"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/cursor"
        android:visibility="gone" />

</FrameLayout>
