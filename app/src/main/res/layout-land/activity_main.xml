<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Area dos Videos -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomControls"
        android:background="#000000" />

    <!-- MENU INFERIOR COMPACTO -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#1a1a1a"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="&#8592;"
            android:textColor="#FFFFFF"
            android:background="#333333"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:text="&#9776;"
            android:textColor="#FFFFFF"
            android:background="#1e3c72"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOX:"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:layout_marginLeft="10dp" />

        <CheckBox android:id="@+id/checkBox1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:textColor="#FFFFFF" android:textSize="11sp" android:checked="true" />
        <CheckBox android:id="@+id/checkBox2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2" android:textColor="#FFFFFF" android:textSize="11sp" android:checked="true" />
        <CheckBox android:id="@+id/checkBox3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" android:textColor="#FFFFFF" android:textSize="11sp" android:checked="true" />
        <CheckBox android:id="@+id/checkBox4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4" android:textColor="#FFFFFF" android:textSize="11sp" android:checked="true" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <TextView
            android:id="@+id/tvFocusedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foco: 1"
            android:textColor="#FF9800"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Overlay para bloquear cliques -->
    <View
        android:id="@+id/sidebarOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- SIDEBAR ESTRUTURADA -->
    <LinearLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#1a1a1a"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Cabecalho Fixo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#222222">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MENU"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnCloseMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="&#10005;"
                android:textColor="#FFFFFF"
                android:background="#ff4444"
                android:textSize="12sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- SECAO: GUARDAR/CARREGAR -->
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="GUARDAR / CARREGAR" android:textColor="#888888" android:textSize="10sp" android:layout_marginBottom="6dp" android:textStyle="bold"/>
                <Button android:id="@+id/btnSaveState" android:layout_width="match_parent" android:layout_height="36dp" android:text="GUARDAR ESTADO" android:textSize="11sp" android:layout_marginBottom="4dp" android:background="#333333" android:textColor="#FFFFFF"/>
                <Button android:id="@+id/btnLoadState" android:layout_width="match_parent" android:layout_height="36dp" android:text="CARREGAR ESTADO" android:textSize="11sp" android:layout_marginBottom="4dp" android:background="#333333" android:textColor="#FFFFFF"/>
                <Button android:id="@+id/btnSaveFavorites" android:layout_width="match_parent" android:layout_height="36dp" android:text="GUARDAR FAVORITO" android:textSize="11sp" android:layout_marginBottom="4dp" android:background="#333333" android:textColor="#FFFFFF"/>
                <Button android:id="@+id/btnLoadFavorites" android:layout_width="match_parent" android:layout_height="36dp" android:text="CARREGAR FAVORITO" android:textSize="11sp" android:layout_marginBottom="12dp" android:background="#333333" android:textColor="#FFFFFF"/>

                <!-- SECAO: CONFIG WEB -->
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="CONFIG WEB" android:textColor="#888888" android:textSize="10sp" android:layout_marginBottom="6dp" android:textStyle="bold"/>
                <CheckBox android:id="@+id/cbAllowScripts" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="JavaScript" android:textColor="#FFFFFF" android:textSize="11sp" android:checked="true"/>
                <CheckBox android:id="@+id/cbAllowForms" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Formularios" android:textColor="#FFFFFF" android:textSize="11sp" android:checked="true"/>
                <CheckBox android:id="@+id/cbAllowPopups" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Popups" android:textColor="#FFFFFF" android:textSize="11sp" />
                <CheckBox android:id="@+id/cbBlockRedirects" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bloq Redirects" android:textColor="#FFFFFF" android:textSize="11sp" />
                <CheckBox android:id="@+id/cbBlockAds" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bloq Anuncios" android:textColor="#FFFFFF" android:textSize="11sp" android:layout_marginBottom="12dp"/>

                <!-- SECAO: URLS -->
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="URLS (ENTER)" android:textColor="#888888" android:textSize="10sp" android:layout_marginBottom="6dp" android:textStyle="bold"/>
                <EditText android:id="@+id/urlInput1" android:layout_width="match_parent" android:layout_height="32dp" android:hint="URL 1" android:textColor="#FFFFFF" android:background="#222222" android:padding="6dp" android:textSize="10sp" android:layout_marginBottom="4dp" android:singleLine="true" android:imeOptions="actionDone"/>
                <EditText android:id="@+id/urlInput2" android:layout_width="match_parent" android:layout_height="32dp" android:hint="URL 2" android:textColor="#FFFFFF" android:background="#222222" android:padding="6dp" android:textSize="10sp" android:layout_marginBottom="4dp" android:singleLine="true" android:imeOptions="actionDone"/>
                <EditText android:id="@+id/urlInput3" android:layout_width="match_parent" android:layout_height="32dp" android:hint="URL 3" android:textColor="#FFFFFF" android:background="#222222" android:padding="6dp" android:textSize="10sp" android:layout_marginBottom="4dp" android:singleLine="true" android:imeOptions="actionDone"/>
                <EditText android:id="@+id/urlInput4" android:layout_width="match_parent" android:layout_height="32dp" android:hint="URL 4" android:textColor="#FFFFFF" android:background="#222222" android:padding="6dp" android:textSize="10sp" android:layout_marginBottom="12dp" android:singleLine="true" android:imeOptions="actionDone"/>

                <!-- ACOES GLOBAIS -->
                <Button android:id="@+id/btnLoadAll" android:layout_width="match_parent" android:layout_height="36dp" android:text="CARREGAR TODAS" android:textSize="11sp" android:layout_marginBottom="4dp" android:background="#1e3c72" android:textColor="#FFFFFF"/>
                <Button android:id="@+id/btnReloadAll" android:layout_width="match_parent" android:layout_height="36dp" android:text="RECARREGAR TODAS" android:textSize="11sp" android:layout_marginBottom="4dp" android:background="#1e3c72" android:textColor="#FFFFFF"/>
                <Button android:id="@+id/btnClearAll" android:layout_width="match_parent" android:layout_height="36dp" android:text="LIMPAR TODAS" android:textSize="11sp" android:background="#ff4444" android:textColor="#FFFFFF"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
