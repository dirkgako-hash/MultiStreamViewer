<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- GridLayout para os players -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomControls"
        android:background="#000000" />

    <!-- BARRA INFERIOR (Altura reduzida para ~54dp, que Ã© 2/3 de 80dp) -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="#1a1a1a"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â†"
            android:textColor="#FFFFFF"
            android:background="#333333"
            android:focusable="true" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:text="â˜°"
            android:textColor="#FFFFFF"
            android:background="#1e3c72"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOX:"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="12dp" />

        <CheckBox android:id="@+id/checkBox1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:textColor="#FFFFFF" android:checked="true" android:focusable="true" />
        <CheckBox android:id="@+id/checkBox2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2" android:textColor="#FFFFFF" android:checked="true" android:focusable="true" />
        <CheckBox android:id="@+id/checkBox3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" android:textColor="#FFFFFF" android:checked="true" android:focusable="true" />
        <CheckBox android:id="@+id/checkBox4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4" android:textColor="#FFFFFF" android:checked="true" android:focusable="true" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <TextView
            android:id="@+id/tvFocusedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foco: 1"
            android:textColor="#FF9800"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Overlay para bloquear cliques nas boxes quando o menu estÃ¡ aberto -->
    <View
        android:id="@+id/sidebarOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- Sidebar Menu (Sem transparÃªncia, BotÃ£o fechar fixo) -->
    <LinearLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#1a1a1a"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- CabeÃ§alho Fixo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CONFIGURAÃ‡Ã•ES"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnCloseMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="âœ•"
                android:textColor="#FFFFFF"
                android:background="#ff4444"
                android:focusable="true" />
        </LinearLayout>

        <!-- ConteÃºdo com Scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Inputs de URL com botÃ£o de carregar individual -->
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="URLS INDIVIDUAIS" android:textColor="#FFFFFF" android:layout_marginBottom="8dp"/>
                
                <!-- Box 1 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/urlInput1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="URL 1" android:textColor="#FFFFFF" android:background="#333333" android:padding="8dp" android:textSize="12sp"/>
                    <Button android:id="@+id/btnGo1" android:layout_width="40dp" android:layout_height="40dp" android:text="OK" android:textSize="10sp" android:focusable="true"/>
                </LinearLayout>
                <!-- Box 2 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/urlInput2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="URL 2" android:textColor="#FFFFFF" android:background="#333333" android:padding="8dp" android:textSize="12sp"/>
                    <Button android:id="@+id/btnGo2" android:layout_width="40dp" android:layout_height="40dp" android:text="OK" android:textSize="10sp" android:focusable="true"/>
                </LinearLayout>
                <!-- Box 3 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/urlInput3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="URL 3" android:textColor="#FFFFFF" android:background="#333333" android:padding="8dp" android:textSize="12sp"/>
                    <Button android:id="@+id/btnGo3" android:layout_width="40dp" android:layout_height="40dp" android:text="OK" android:textSize="10sp" android:focusable="true"/>
                </LinearLayout>
                <!-- Box 4 -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                    <EditText android:id="@+id/urlInput4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="URL 4" android:textColor="#FFFFFF" android:background="#333333" android:padding="8dp" android:textSize="12sp"/>
                    <Button android:id="@+id/btnGo4" android:layout_width="40dp" android:layout_height="40dp" android:text="OK" android:textSize="10sp" android:focusable="true"/>
                </LinearLayout>

                <Button android:id="@+id/btnSaveState" android:layout_width="match_parent" android:layout_height="48dp" android:text="GUARDAR ESTADO" android:layout_marginBottom="8dp" android:focusable="true"/>
                <Button android:id="@+id/btnLoadState" android:layout_width="match_parent" android:layout_height="48dp" android:text="CARREGAR ESTADO" android:layout_marginBottom="8dp" android:focusable="true"/>
                <Button android:id="@+id/btnSaveFavorites" android:layout_width="match_parent" android:layout_height="48dp" android:text="GUARDAR FAVORITO" android:layout_marginBottom="8dp" android:focusable="true"/>
                <Button android:id="@+id/btnLoadFavorites" android:layout_width="match_parent" android:layout_height="48dp" android:text="CARREGAR FAVORITO" android:layout_marginBottom="16dp" android:focusable="true"/>

                <CheckBox android:id="@+id/cbAllowScripts" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Scripts" android:textColor="#FFFFFF" android:checked="true" android:focusable="true"/>
                <CheckBox android:id="@+id/cbBlockAds" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bloquear Ads" android:textColor="#FFFFFF" android:focusable="true"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
