<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- GridLayout para os 4 players -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:focusable="false" />

    <!-- BARRA INFERIOR OTIMIZADA PARA TV -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#1a1a1aCC"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Botão BACK -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="#333333"
            android:focusable="true"
            android:nextFocusRight="@+id/btnMenu"
            android:text="←"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- Botão MENU -->
        <Button
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="#1e3c72"
            android:focusable="true"
            android:nextFocusLeft="@+id/btnBack"
            android:nextFocusRight="@+id/checkBox1"
            android:text="☰"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- Checkboxes maiores para TV -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOX:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:checked="true"
            android:focusable="true"
            android:nextFocusLeft="@+id/btnMenu"
            android:nextFocusRight="@+id/checkBox2" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:checked="true"
            android:focusable="true"
            android:nextFocusLeft="@+id/checkBox1"
            android:nextFocusRight="@+id/checkBox3" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:checked="true"
            android:focusable="true"
            android:nextFocusLeft="@+id/checkBox2"
            android:nextFocusRight="@+id/checkBox4" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:checked="true"
            android:focusable="true"
            android:nextFocusLeft="@+id/checkBox3" />

        <!-- Espaço flexível -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Indicador de box em foco para TV -->
        <TextView
            android:id="@+id/tvFocusedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foco: 1"
            android:textColor="#FF9800"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:focusable="false" />
    </LinearLayout>

    <!-- Overlay para fechar sidebar ao tocar fora -->
    <View
        android:id="@+id/sidebarOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <!-- Sidebar Menu OTIMIZADO PARA TV -->
    <ScrollView
        android:id="@+id/sidebarMenu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottomControls"
        android:background="#1a1a1aEE"
        android:scrollbars="vertical"
        android:visibility="gone"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Cabeçalho para TV -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONFIGURAÇÕES TV"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCloseMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="#ff4444"
                    android:focusable="true"
                    android:text="✕"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- SEÇÃO: GUARDAR/CARREGAR -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUARDAR / CARREGAR"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnSaveState"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#4CAF50"
                android:focusable="true"
                android:text="GUARDAR ESTADO"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnLoadState"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#4CAF50"
                android:focusable="true"
                android:text="CARREGAR ESTADO"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnSaveFavorites"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FF9800"
                android:focusable="true"
                android:text="GUARDAR FAVORITO"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnLoadFavorites"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FF9800"
                android:focusable="true"
                android:text="CARREGAR FAVORITO"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- SEÇÃO: CONFIGURAÇÕES -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONFIGURAÇÕES WEB"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/cbAllowScripts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="JavaScript"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:focusable="true" />

            <CheckBox
                android:id="@+id/cbAllowForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Formulários"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:focusable="true" />

            <CheckBox
                android:id="@+id/cbAllowPopups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Popups"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:focusable="true" />

            <CheckBox
                android:id="@+id/cbBlockRedirects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Bloquear Redirects"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:focusable="true" />

            <CheckBox
                android:id="@+id/cbBlockAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Bloquear Anúncios"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:focusable="true" />

            <!-- SEÇÃO: URLs -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URLs (ENTER para carregar)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/urlInput1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#333333"
                android:focusable="true"
                android:hint="Box 1"
                android:imeOptions="actionDone"
                android:inputType="textUri"
                android:padding="12dp"
                android:text="https://www.youtube.com/tv"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/urlInput2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#333333"
                android:focusable="true"
                android:hint="Box 2"
                android:imeOptions="actionDone"
                android:inputType="textUri"
                android:padding="12dp"
                android:text="https://www.twitch.tv"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/urlInput3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#333333"
                android:focusable="true"
                android:hint="Box 3"
                android:imeOptions="actionDone"
                android:inputType="textUri"
                android:padding="12dp"
                android:text="https://vimeo.com"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/urlInput4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#333333"
                android:focusable="true"
                android:hint="Box 4"
                android:imeOptions="actionDone"
                android:inputType="textUri"
                android:padding="12dp"
                android:text="https://www.dailymotion.com"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Botões de ação para TV -->
            <Button
                android:id="@+id/btnLoadAll"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#1e3c72"
                android:focusable="true"
                android:text="CARREGAR TODAS"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnReloadAll"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#1e3c72"
                android:focusable="true"
                android:text="RECARREGAR TODAS"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#ff4444"
                android:focusable="true"
                android:text="LIMPAR TODAS"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
