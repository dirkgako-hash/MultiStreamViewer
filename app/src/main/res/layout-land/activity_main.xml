                android:id="@+id/btnNext4"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="#333333"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="▶"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Espaço flexível -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Indicador de box em foco -->
        <TextView
            android:id="@+id/tvFocusedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foco: 1"
            android:textColor="#FF9800"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            android:focusable="false" />
    </LinearLayout>

    <!-- SIDEBAR SIMPLIFICADO E CORRIGIDO -->
    <FrameLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottomControls"
        android:background="#1a1a1a"
        android:visibility="gone"
        android:elevation="100dp">

        <!-- Overlay para fechar sidebar ao clicar fora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:onClick="closeSidebarFromOverlay" />

        <!-- Conteúdo do sidebar -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1a1a1a"
            android:padding="8dp">

            <!-- Cabeçalho -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONFIG"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCloseMenu"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="#ff4444"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="✕"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- ScrollView para conteúdo rolável -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- GUARDAR/CARREGAR -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GUARDAR/CARREGAR"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">
                        
                        <Button
                            android:id="@+id/btnSaveState"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="#4CAF50"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="SALVAR"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                        
                        <Button
                            android:id="@+id/btnLoadState"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="#4CAF50"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="CARREGAR"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <Button
                            android:id="@+id/btnSaveFavorites"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="#FF9800"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="FAV SAVE"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                        
                        <Button
                            android:id="@+id/btnLoadFavorites"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="#FF9800"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="FAV LOAD"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <!-- CONFIGURAÇÕES WEB -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CONFIG WEB"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <CheckBox
                        android:id="@+id/cbAllowScripts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="JavaScript"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/cbAllowForms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Formulários"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/cbAllowPopups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Popups"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/cbBlockRedirects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Bloq. Redirects"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <CheckBox
                        android:id="@+id/cbBlockAds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Bloq. Ads"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:layout_marginBottom="12dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <!-- URLs -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="URLs (ENTER para carregar)"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <!-- URL 1 com botão - CORRIGIDO para edição -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        
                        <EditText
                            android:id="@+id/urlInput1"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Box 1"
                            android:imeOptions="actionDone"
                            android:inputType="textUri|textMultiLine"
                            android:padding="8dp"
                            android:text="https://dzritv.com/sport/football/"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:singleLine="false"
                            android:lines="1"
                            android:maxLines="2" />
                        
                        <Button
                            android:id="@+id/btnLoadUrl1"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="4dp"
                            android:background="#1e3c72"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="GO"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <!-- URL 2 com botão -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        
                        <EditText
                            android:id="@+id/urlInput2"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Box 2"
                            android:imeOptions="actionDone"
                            android:inputType="textUri|textMultiLine"
                            android:padding="8dp"
                            android:text="https://dzritv.com/sport/football/"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:singleLine="false"
                            android:lines="1"
                            android:maxLines="2" />
                        
                        <Button
                            android:id="@+id/btnLoadUrl2"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="4dp"
                            android:background="#1e3c72"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="GO"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <!-- URL 3 com botão -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        
                        <EditText
                            android:id="@+id/urlInput3"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Box 3"
                            android:imeOptions="actionDone"
                            android:inputType="textUri|textMultiLine"
                            android:padding="8dp"
                            android:text="https://dzritv.com/sport/football/"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:singleLine="false"
                            android:lines="1"
                            android:maxLines="2" />
                        
                        <Button
                            android:id="@+id/btnLoadUrl3"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="4dp"
                            android:background="#1e3c72"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="GO"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <!-- URL 4 com botão -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        
                        <EditText
                            android:id="@+id/urlInput4"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#333333"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Box 4"
                            android:imeOptions="actionDone"
                            android:inputType="textUri|textMultiLine"
                            android:padding="8dp"
                            android:text="https://dzritv.com/sport/football/"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:singleLine="false"
                            android:lines="1"
                            android:maxLines="2" />
                        
                        <Button
                            android:id="@+id/btnLoadUrl4"
                            android:layout_width="50dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="4dp"
                            android:background="#1e3c72"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="GO"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <!-- Botões de ação -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        
                        <Button
                            android:id="@+id/btnLoadAll"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#1e3c72"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="LOAD ALL"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                        
                        <Button
                            android:id="@+id/btnReloadAll"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="#1e3c72"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:text="RELOAD ALL"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnClearAll"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#ff4444"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="CLEAR ALL"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>