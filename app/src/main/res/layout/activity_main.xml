                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/text_white"
                android:textSize="9sp"
                android:checked="false"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            
            <Button
                android:id="@+id/btnZoomIn2"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Z+"
                android:textColor="@color/text_white"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnZoomOut2"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Z-"
                android:textColor="@color/text_white"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnPrevious2"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="◀"
                android:textColor="@color/text_white"
                android:textSize="10sp" />
            
            <Button
                android:id="@+id/btnNext2"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="▶"
                android:textColor="@color/text_white"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- CONTROLES BOX 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="4dp">
            
            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/text_white"
                android:textSize="10sp"
                android:checked="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            
            <Button
                android:id="@+id/btnRefresh3"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="R"
                android:textColor="@color/text_white"
                android:textSize="10sp" />
            
            <!-- CHECKBOX AUTO RELOAD -->
            <CheckBox
                android:id="@+id/cbAutoReload3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/text_white"
                android:textSize="9sp"
                android:checked="false"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            
            <Button
                android:id="@+id/btnZoomIn3"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Z+"
                android:textColor="@color/text_white"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnZoomOut3"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Z-"
                android:textColor="@color/text_white"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnPrevious3"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="◀"
                android:textColor="@color/text_white"
                android:textSize="10sp" />
            
            <Button
                android:id="@+id/btnNext3"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="▶"
                android:textColor="@color/text_white"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- CONTROLES BOX 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/text_white"
                android:textSize="10sp"
                android:checked="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            
            <Button
                android:id="@+id/btnRefresh4"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="R"
                android:textColor="@color/text_white"
                android:textSize="10sp" />
            
            <!-- CHECKBOX AUTO RELOAD -->
            <CheckBox
                android:id="@+id/cbAutoReload4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/text_white"
                android:textSize="9sp"
                android:checked="false"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            
            <Button
                android:id="@+id/btnZoomIn4"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Z+"
                android:textColor="@color/text_white"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnZoomOut4"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Z-"
                android:textColor="@color/text_white"
                android:textSize="9sp" />
            
            <Button
                android:id="@+id/btnPrevious4"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="◀"
                android:textColor="@color/text_white"
                android:textSize="10sp" />
            
            <Button
                android:id="@+id/btnNext4"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:background="@color/background_darker"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="▶"
                android:textColor="@color/text_white"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Espaço flexível -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Indicador de box em foco -->
        <TextView
            android:id="@+id/tvFocusedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foco: 1"
            android:textColor="@color/text_orange"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            android:focusable="false" />
    </LinearLayout>

    <!-- SIDEBAR COMPACTO - SEM SCROLLBAR -->
    <FrameLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottomControls"
        android:background="@color/background_dark"
        android:visibility="gone"
        android:elevation="100dp">

        <!-- Overlay para fechar sidebar ao clicar fora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:onClick="closeSidebarFromOverlay" />

        <!-- Conteúdo do sidebar - COMPACTO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background_dark"
            android:padding="6dp">

            <!-- Cabeçalho -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONFIG"
                    android:textColor="@color/text_white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCloseMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/button_red"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="✕"
                    android:textColor="@color/text_white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Conteúdo principal sem ScrollView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="top">

                <!-- GUARDAR/CARREGAR -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR/CARREGAR"
                    android:textColor="@color/text_white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">
                    
                    <Button
                        android:id="@+id/btnSaveState"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:background="@color/button_green"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="SALVAR"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                    
                    <Button
                        android:id="@+id/btnLoadState"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_green"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="CARREGAR"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                    
                    <Button
                        android:id="@+id/btnSaveFavorites"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_orange"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="FAV S"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                    
                    <Button
                        android:id="@+id/btnLoadFavorites"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_orange"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="FAV L"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                </LinearLayout>

                <!-- CONFIGURAÇÕES WEB - DUAS COLUNAS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONFIG WEB"
                    android:textColor="@color/text_white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    
                    <!-- Coluna 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <CheckBox
                            android:id="@+id/cbAllowScripts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="JavaScript"
                            android:textColor="@color/text_white"
                            android:textSize="8sp"
                            android:layout_marginBottom="1dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                        
                        <CheckBox
                            android:id="@+id/cbAllowForms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Formulários"
                            android:textColor="@color/text_white"
                            android:textSize="8sp"
                            android:layout_marginBottom="1dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                        
                        <CheckBox
                            android:id="@+id/cbAllowPopups"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Popups"
                            android:textColor="@color/text_white"
                            android:textSize="8sp"
                            android:layout_marginBottom="1dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </LinearLayout>
                    
                    <!-- Coluna 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">
                        
                        <CheckBox
                            android:id="@+id/cbBlockRedirects"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Bloq. Redirects"
                            android:textColor="@color/text_white"
                            android:textSize="8sp"
                            android:layout_marginBottom="1dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                        
                        <CheckBox
                            android:id="@+id/cbBlockAds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Bloq. Ads"
                            android:textColor="@color/text_white"
                            android:textSize="8sp"
                            android:layout_marginBottom="1dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </LinearLayout>
                </LinearLayout>

                <!-- URLs -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="URLs (GO para carregar)"
                    android:textColor="@color/text_white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <!-- URL 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">
                    
                    <EditText
                        android:id="@+id/urlInput1"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="@color/background_darker"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 1"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="4dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="@color/text_white"
                        android:textSize="9sp"
                        android:singleLine="true"
                        android:maxLines="1" />
                    
                    <Button
                        android:id="@+id/btnLoadUrl1"
                        android:layout_width="36dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="GO"
                        android:textColor="@color/text_white"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- URL 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">
                    
                    <EditText
                        android:id="@+id/urlInput2"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="@color/background_darker"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 2"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="4dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="@color/text_white"
                        android:textSize="9sp"
                        android:singleLine="true"
                        android:maxLines="1" />
                    
                    <Button
                        android:id="@+id/btnLoadUrl2"
                        android:layout_width="36dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="GO"
                        android:textColor="@color/text_white"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- URL 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">
                    
                    <EditText
                        android:id="@+id/urlInput3"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="@color/background_darker"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 3"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="4dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="@color/text_white"
                        android:textSize="9sp"
                        android:singleLine="true"
                        android:maxLines="1" />
                    
                    <Button
                        android:id="@+id/btnLoadUrl3"
                        android:layout_width="36dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="GO"
                        android:textColor="@color/text_white"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- URL 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">
                    
                    <EditText
                        android:id="@+id/urlInput4"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="@color/background_darker"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Box 4"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="4dp"
                        android:text="https://dzritv.com/sport/football/"
                        android:textColor="@color/text_white"
                        android:textSize="9sp"
                        android:singleLine="true"
                        android:maxLines="1" />
                    
                    <Button
                        android:id="@+id/btnLoadUrl4"
                        android:layout_width="36dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="GO"
                        android:textColor="@color/text_white"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- BOTÕES DE AÇÃO - TODOS NA MESMA LINHA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    
                    <Button
                        android:id="@+id/btnLoadAll"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="LOAD ALL"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                    
                    <Button
                        android:id="@+id/btnReloadAll"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_blue"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="RELOAD ALL"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                    
                    <Button
                        android:id="@+id/btnClearAll"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@color/button_red"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="CLEAR ALL"
                        android:textColor="@color/text_white"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
