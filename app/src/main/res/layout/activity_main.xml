<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- GridLayout para os 4 players -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <!-- Overlay transparente para controles -->
    <LinearLayout
        android:id="@+id/overlayControls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Barra superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1a1a1aCC"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#333333"
                android:text="â˜°"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnOrientation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#333333"
                android:text="ðŸ“±"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Container para controles -->
        <FrameLayout
            android:id="@+id/controlsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Barra inferior -->
        <LinearLayout
            android:id="@+id/bottomPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1a1a1aCC"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Linha 1: BotÃµes principais -->
            <LinearLayout
                android:id="@+id/controlsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnFoldChecks"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:background="#444444"
                    android:text="â–²"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnToggleSidebar"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="#1e3c72"
                    android:text="â˜° MENU"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnTogglePortrait"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="#1e3c72"
                    android:text="ðŸ“± ORIENT"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOXES:"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- Linha 2: Checkboxes -->
            <LinearLayout
                android:id="@+id/checkboxContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOX 1"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginEnd="16dp"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOX 2"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginEnd="16dp"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOX 3"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginEnd="16dp"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOX 4"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:checked="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Sidebar Menu COM OPÃ‡Ã•ES DE LAYOUT -->
    <ScrollView
        android:id="@+id/sidebarMenu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#1a1a1aEE"
        android:scrollbars="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- CabeÃ§alho -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONFIGURAÃ‡Ã•ES"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCloseMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#ff4444"
                    android:text="âœ•"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- SEÃ‡ÃƒO: LAYOUT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAYOUT"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Linha 1: Layouts principais -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnLayout2x2"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#1e3c72"
                    android:text="2x2"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btnLayout1x4"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="#1e3c72"
                    android:text="1x4"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btnLayout4x1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="#1e3c72"
                    android:text="4x1"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Linha 2: Layouts secundÃ¡rios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnLayout1x2"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#1e3c72"
                    android:text="1x2"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btnLayout2x1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="#1e3c72"
                    android:text="2x1"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btnLayout1x3"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="#1e3c72"
                    android:text="1x3"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Linha 3: Layouts restantes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24px">

                <Button
                    android:id="@+id/btnLayout3x1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#1e3c72"
                    android:text="3x1"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btnLayout1x1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="#1e3c72"
                    android:text="1x1"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- SEÃ‡ÃƒO: CONFIGURAÃ‡Ã•ES -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONFIGURAÃ‡Ã•ES WEB"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/cbAllowScripts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Permitir JavaScript"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/cbAllowForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Permitir FormulÃ¡rios"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/cbAllowPopups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Permitir Popups"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/cbBlockRedirects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Bloquear Redirecionamentos"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />

            <!-- URLs -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URLs DAS BOXES"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/urlInput1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#333333"
                android:hint="Box 1 URL"
                android:inputType="textUri"
                android:padding="8dp"
                android:text="https://www.youtube.com"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/urlInput2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#333333"
                android:hint="Box 2 URL"
                android:inputType="textUri"
                android:padding="8dp"
                android:text="https://www.twitch.tv"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/urlInput3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#333333"
                android:hint="Box 3 URL"
                android:inputType="textUri"
                android:padding="8dp"
                android:text="https://vimeo.com"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/urlInput4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#333333"
                android:hint="Box 4 URL"
                android:inputType="textUri"
                android:padding="8dp"
                android:text="https://www.dailymotion.com"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />

            <!-- BotÃµes de aÃ§Ã£o -->
            <Button
                android:id="@+id/btnLoadAll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#1e3c72"
                android:text="CARREGAR TODAS URLs"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnReloadAll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#1e3c72"
                android:text="RECARREGAR TODAS"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ff4444"
                android:text="LIMPAR TODAS"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>