<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Barra de URL e Controles (minimalista, oculta por padrão) -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC1A1A1A"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Linha de entrada de URL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <EditText
                android:id="@+id/url_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:hint="https://exemplo.com"
                android:inputType="textUri"
                android:textSize="12sp"
                android:background="@android:color/white"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <Button
                android:id="@+id/btn_load"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="LOAD"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Controles de navegação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voltar" />

            <ImageButton
                android:id="@+id/btn_forward"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Avançar"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_refresh"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Recarregar"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Fechar"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ready"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:paddingStart="12dp"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>
    </LinearLayout>

    <!-- Container para WebViews (2x2 grid) -->
    <GridLayout
        android:id="@+id/webview_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- WebView 1 -->
        <FrameLayout
            android:id="@+id/container_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/black">

            <WebView
                android:id="@+id/webview_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_webview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Stream 1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />

        </FrameLayout>

        <!-- WebView 2 -->
        <FrameLayout
            android:id="@+id/container_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/black">

            <WebView
                android:id="@+id/webview_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_webview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Stream 2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />

        </FrameLayout>

        <!-- WebView 3 -->
        <FrameLayout
            android:id="@+id/container_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/black">

            <WebView
                android:id="@+id/webview_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_webview_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Stream 3"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />

        </FrameLayout>

        <!-- WebView 4 -->
        <FrameLayout
            android:id="@+id/container_4"
            android:layout_width="0dp"
                android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/black">

            <WebView
                android:id="@+id/webview_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_webview_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Stream 4"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />

        </FrameLayout>

    </GridLayout>

    <!-- Botão flutuante para mostrar/ocultar controles -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_info_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#CC6200EE"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
