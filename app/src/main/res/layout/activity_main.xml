<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- GridLayout para os 4 players -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <!-- BARRA INFERIOR REDUZIDA (2/3 menor) -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:background="#1a1a1a"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp">

        <!-- Botão BACK -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginEnd="4dp"
            android:background="#333333"
            android:text="←"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <!-- Botão MENU -->
        <Button
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:background="#1e3c72"
            android:text="☰"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <!-- Separador -->
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#555555" />

        <!-- Checkboxes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOXES:"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:layout_marginEnd="4dp" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:layout_marginEnd="4dp"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:layout_marginEnd="4dp"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:layout_marginEnd="4dp"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:checked="true" />

        <!-- Espaço flexível -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Indicador de box em foco -->
        <TextView
            android:id="@+id/tvFocusedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foco: 1"
            android:textColor="#FF9800"
            android:textSize="8sp"
            android:layout_marginStart="8dp"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Overlay para sidebar -->
    <View
        android:id="@+id/sidebarOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <!-- Sidebar Menu COMPACTO -->
    <RelativeLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ScrollView
            android:id="@+id/sidebarMenu"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="#1a1a1a"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Cabeçalho com botão fechar SEMPRE VISÍVEL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CONFIGURAÇÕES"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnCloseMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="#ff4444"
                        android:text="✕"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- SEÇÃO: GUARDAR/CARREGAR -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR / CARREGAR"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/btnSaveState"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#4CAF50"
                    android:text="GUARDAR ESTADO"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:id="@+id/btnLoadState"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#4CAF50"
                    android:text="CARREGAR ESTADO"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/btnSaveFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#FF9800"
                    android:text="GUARDAR FAVORITO"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:id="@+id/btnLoadFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#FF9800"
                    android:text="CARREGAR FAVORITO"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="8dp" />

                <!-- SEÇÃO: CONFIGURAÇÕES -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONFIGURAÇÕES WEB"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <CheckBox
                    android:id="@+id/cbAllowScripts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="JavaScript"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="2dp" />

                <CheckBox
                    android:id="@+id/cbAllowForms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Formulários"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="2dp" />

                <CheckBox
                    android:id="@+id/cbAllowPopups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Popups"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="2dp" />

                <CheckBox
                    android:id="@+id/cbBlockRedirects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Bloquear Redirects"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="2dp" />

                <CheckBox
                    android:id="@+id/cbBlockAds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Bloquear Anúncios"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="6dp" />

                <!-- SEÇÃO: URLs com botões de carregar individual -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="URLs (ENTER para carregar)"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <!-- Box 1 com botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">
                    <EditText
                        android:id="@+id/urlInput1"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="#333333"
                        android:hint="Box 1"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="4dp"
                        android:text="https://kevinsport.pro/live/football/"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp" />
                    <Button
                        android:id="@+id/btnLoadUrl1"
                        android:layout_width="40dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="4dp"
                        android:background="#1e3c72"
                        android:text="▶"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Box 2 com botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">
                    <EditText
                        android:id="@+id/urlInput2"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="#333333"
                        android:hint="Box 2"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="4dp"
                        android:text="https://kevinsport.pro/live/football/"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp" />
                    <Button
                        android:id="@+id/btnLoadUrl2"
                        android:layout_width="40dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="4dp"
                        android:background="#1e3c72"
                        android:text="▶"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Box 3 com botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">
                    <EditText
                        android:id="@+id/urlInput3"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="#333333"
                        android:hint="Box 3"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="4dp"
                        android:text="https://kevinsport.pro/live/football/"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp" />
                    <Button
                        android:id="@+id/btnLoadUrl3"
                        android:layout_width="40dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="4dp"
                        android:background="#1e3c72"
                        android:text="▶"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Box 4 com botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">
                    <EditText
                        android:id="@+id/urlInput4"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="#333333"
                        android:hint="Box 4"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:padding="4dp"
                        android:text="https://kevinsport.pro/live/football/"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp" />
                    <Button
                        android:id="@+id/btnLoadUrl4"
                        android:layout_width="40dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="4dp"
                        android:background="#1e3c72"
                        android:text="▶"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Botões de ação -->
                <Button
                    android:id="@+id/btnLoadAll"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#1e3c72"
                    android:text="CARREGAR TODAS"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:id="@+id/btnReloadAll"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#1e3c72"
                    android:text="RECARREGAR TODAS"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:id="@+id/btnClearAll"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#ff4444"
                    android:text="LIMPAR TODAS"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
